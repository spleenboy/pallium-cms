doctype html
html(lang="en")
    head
        title= pageTitle
        block styles
            link(rel='stylesheet', href='/assets/css/pure-min.css')
            link(rel='stylesheet', href='/assets/css/catdown.css')
            link(rel='stylesheet', href='/assets/css/main.css')
    body
        #layout
            header
                block header
                    h1= pageTitle
            nav.menu.pure-menu
                block menu 
                    ul.pure-menu-list
                        li.pure-menu-heading Entries
                        each type, key in entries.types
                            if key === params.type
                                li.pure-menu-item.pure-menu-selected
                                    a.pure-menu-link(href="/entry/#{key}/list")= type.plural
                            else
                                li.pure-menu-item
                                    a.pure-menu-link(href="/entry/#{key}/list")= type.plural
            section.main
                block main
                    p Main
            footer
                block footer
                    p Footer
        block scripts
            script(type='text/javascript', src='/assets/js/bundle.js')
